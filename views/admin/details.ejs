<%- include('partials/header') -%>

<div class="content">
  <div class="container">
    <form action="/admin/details" class="col-md-9" method="post">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address ..</label>
        <input style="background:#e6e6e6" type="email" class="form-control" name="email" value="" id="exampleInputEmail1" aria-describedby="emailHelp" autocomplete="off" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Contact ..</label>
        <input style="background:#e6e6e6" type="contact" class="form-control" name="contact" value="" id="exampleInputPassword1" autocomplete="off" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Address ..</label>
        <input style="background:#e6e6e6" type="text" class="form-control" name="address" value="" id="exampleInputPassword1" autocomplete="off" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <hr>
  <table class="table table-dark col-md-9">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Contact</th>
      <th scope="col">Address</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td> <%= data[0].email %> </td>
      <td> <%= data[0].contact %> </td>
      <td> <%= data[0].address %> </td>
    </tr>
  </tbody>
</table>
  </div>
</div>

<%- include('partials/footer') -%>
