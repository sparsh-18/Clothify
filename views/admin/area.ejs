<%- include('partials/header.ejs') -%>

<div class="content">
  <div class="container">


  <h2 style="padding:1%">Add New Delivery Location</h2>
  <form action="/admin/area" method="post">
    <div class="form-group col-6" >
      <label for="area">Area Name</label>
      <input style="background:#e6e6e6" type="text" class="form-control" name="area" id="area" placeholder="Enter area name">

    </div>
    <div class="form-group col-4  ">
      <label for="pincode">Pincode</label>
      <input style="background:#e6e6e6" type="text" class="form-control" name="pin" id="pincode" placeholder="Pincode">
    </div>
    <button style="margin:1%"  type="submit" class="btn btn-primary">Submit</button>
  </form>

  <table style="margin-top:5%;" class="table col-6">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Area Name</th>
      <th scope="col">Pincode</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
<%  delv.forEach((item) => { %>
    <tr>
      <th scope="row">*</th>
      <td><%= item.area%></td>
      <td><%= item.pincode%></td>
      <td><a href="/admin/areadelete/<%=item.id%>"><button type="button" class="btn btn-success btn-sm" name="button">DELETE</button></a></td>
    </tr>

<%  }) %>

  </tbody>
</table>
  </div>
</div>


<%- include('partials/footer.ejs') -%>
